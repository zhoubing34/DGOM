# src/utils/ncoffsets/Makefile.  Generated from Makefile.in by configure.

srcdir = .


include ../../../macros.make

C_SOURCES	= ncoffsets.c
OBJS            = $(C_SOURCES:.c=.o)

PROGRAM		= $(C_SOURCES:.c=)
MANUAL		= ncoffsets.1
PACKING_LIST    = $(C_SOURCES) $(MANUAL) Makefile.in
GARBAGE		= $(PROGRAM)

all: $(PROGRAM)

ncoffsets: ncoffsets.c
	$(SEQ_CC) -o $@ $<

install: $(PROGRAM) $(MANUAL)
	$(INSTALL) -d -m 755 $(MANDIR)/man1
	$(INSTALL_DATA) $(srcdir)/$(MANUAL) $(MANDIR)/man1/$(MANUAL)
	$(INSTALL) -d $(BINDIR)
	$(INSTALL) -m 755 $(PROGRAM) $(BINDIR)/$(PROGRAM)

uninstall:
	$(RM) -f $(BINDIR)/$(PROGRAM)
	$(RM) -f $(MANDIR)/man1/$(MANUAL)

include $(srcdir)/../../../rules.make

